<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.SettingsController" alignment="CENTER" spacing="10.0" prefWidth="300.0" prefHeight="300.0">
    <children>
        <Label text="Settings" />
        <Label text="IP:" />
        <TextField fx:id="ipField" />
        <Label text="Port:" />
        <TextField fx:id="portField" />
        <Label text="Demo users (comma separated):" wrapText="true" />
        <TextField fx:id="demoUsersField" />
        <HBox spacing="10.0">
            <children>
                <Button text="Save" onAction="#saveSettings" />
                <Button fx:id="closeButton" text="Close" onAction="#closeSettings" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
